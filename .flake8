[flake8]
max-line-length = 120
extend-ignore = E203,E501,F401,F403,F405,W503,E402,E722
exclude = .git,__pycache__,build,dist,migrations,scripts,utils,app
per-file-ignores =
    __init__.py: F401
    migrations/*: F401,E501
    scripts/*: F401,E501
    utils/*: F401,E501
    app/*: F401,E501
    config.py: F401,E501
    development.py: F401
    wsgi.py: F401
    check_tables.py: F401
    test_connection.py: F401
    fix_linting.py: F401,E501
    tests/*: E501,F401
    app/api/*: E501
    app/models/*: E501
    app/routes/*: E501
    app/utils/*: E501
max-complexity = 15
